@model MasterChef.UI.Models.IngredientModel


<form asp-controller="Ingredient" asp-action="Delete" method="post">

    <div class="modal" tabindex="-1" id="modalExcluirIngrediente">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Desja remover esse item?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="idNomeIngrediente"></p>
                    <input asp-for="@Model.Id" type="hidden" id="hdIdExcluirIngrediente" />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-danger" value="Excluir" />
                </div>
            </div>
        </div>
    </div>

</form>

