@using MasterChef.UI.Models
@model MasterChef.UI.Models.RecipeModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastro de receitas";

}

<h5>Cadastro de Receitas</h5>

<form asp-controller="Recipe" asp-action="Cadastro" method="post" class="border" enctype="multipart/form-data">


    <input asp-for="@Model.Id" type="hidden" id="hdId" value="@ViewBag.id"/>
    <div class="container">
        <div class="row g-2 align-items-center">
            <div class="col-4">
                <label asp-for="@Model.Title" class="form-label">Título</label>
                <input asp-for="@Model.Title" type="text" class="form-control" id="txtTitulo">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>

            <div class="col-4">
                <label asp-for="@Model.File" class="form-label">Arquivo</label>
                <input type="file" asp-for="@Model.File" class="form-control" id="txtimagem">
                <span asp-validation-for="@Model.File" class="text-danger"></span>
            </div>

            <div class="col-4">
                <label asp-for="@Model.Description" class="form-label">Descrição</label>
                <input type="text" asp-for="@Model.Description" class="form-control" id="txtdescicao">
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

        </div>
        <br />
        <div class="row g-3 align-items-center">
            <div class="row g-2 align-items-center">
                <div class="col-12">
                    <label asp-for="@Model.WayOfPrepare" class="form-label">Modo de preparo</label>
                    <textarea asp-for="@Model.WayOfPrepare" class="form-control" id="txtModeFazer" rows="10"></textarea>
                    <span asp-validation-for="@Model.WayOfPrepare" class="text-danger"></span>
                </div>
            </div>
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-dark" id="btnSalvar">Salvar</button>
        </div>
    </div>

</form>
<br />
<h5>Receitas</h5>
<br />
<partial name="_ListaReceitaPartial" view-data="ViewData" for="@Model.Recipes"></partial>
<partial name="_ExcluirReceitaPartial" model="new RecipeModel()" view-data="ViewData"></partial>