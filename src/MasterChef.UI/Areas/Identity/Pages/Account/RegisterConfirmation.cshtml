@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação do registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    Este aplicativo não envia email
    Normalmente esse codigo seria enviado via email <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta!</a>
</p>
    }
    else
    {
<p>
        Por favor cheque seu email para confirmar sua conta!
</p>
    }
}

